{
  "name": "ch-recipe-page",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "lint-check": "npm run lint:stylelint && npm run check:prettier",
    "lint:stylelint": "stylelint \"./css/**/*.css\"",
    "check:prettier": "prettier --check \"./**/*.{html,js,ts,json}\"",
    "fix": "npm run fix:stylelint && npm run fix:prettier",
    "fix:stylelint": "npm run lint:stylelint -- --fix",
    "fix:prettier": "npm run check:prettier -- --write",
    "deploy": "npm run build && gh-pages -d dist",
    "prepare": "simple-git-hooks || echo 'Can not set git hooks'"
  },
  "devDependencies": {
    "autoprefixer": "^10.3.7",
    "gh-pages": "^3.2.3",
    "lint-staged": "^12.1.2",
    "postcss": "^8.3.11",
    "prettier": "^2.4.1",
    "simple-git-hooks": "^2.7.0",
    "stylelint": "^14.0.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recess-order": "^2.5.0",
    "stylelint-config-standard": "^23.0.0",
    "stylelint-order": "^5.0.0",
    "vite": "^2.6.12"
  },
  "volta": {
    "node": "16.13.0",
    "yarn": "1.22.17"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "css/**/*.css": [
      "stylelint --fix --quiet"
    ],
    "./**/*.{html,json}": [
      "prettier --write --loglevel=error"
    ]
  }
}

{
  "name": "ch-recipe-page",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "lint-check": "npm run lint:stylelint && npm run check:prettier",
    "lint:stylelint": "stylelint \"./css/**/*.css\"",
    "check:prettier": "prettier --check \"./**/*.{html,js,ts,json}\"",
    "fix": "npm run fix:stylelint && npm run fix:prettier",
    "fix:stylelint": "npm run lint:stylelint -- --fix",
    "fix:prettier": "npm run check:prettier -- --write",
    "deploy": "npm run build && gh-pages -d dist",
    "prepare": "lefthook install || echo 'Can not set git hooks'"
  },
  "devDependencies": {
    "gh-pages": "^3.2.3",
    "lefthook": "^1.10.10",
    "postcss": "^8.5.2",
    "postcss-preset-env": "^10.1.3",
    "prettier": "^3.5.0",
    "stylelint": "^16.14.1",
    "stylelint-config-recess-order": "^6.0.0",
    "stylelint-config-standard": "^37.0.0",
    "stylelint-order": "^6.0.4",
    "vite": "^6.1.0"
  },
  "volta": {
    "node": "22.13.1"
  }
}
